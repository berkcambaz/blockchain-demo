{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,

    "lib": ["ES2015","DOM"]
  },
  "include": [
    "./src/**/*"
  ]
}